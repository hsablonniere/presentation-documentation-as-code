.tpl-media
  align-items stretch
  justify-content center
  flex-direction row

  &.tpl-media--inverse
    background-color #000

.image
.video
  .tpl-media &
    flex 1 1 0
    margin 0

.image img
.video video
  .tpl-media &
    display block
    height 100%
    object-fit scale-down
    width 100%

.image.medium
.video.medium
  .tpl-media &
    padding calc(var(--slide-height) * 0.25) calc(var(--slide-width) * 0.25)

.image.contain img
.video.contain video
.image.medium img
.image.medium img
  .tpl-media &
    object-fit contain

.image.cover img
.video.cover video
  .tpl-media &
    object-fit cover
